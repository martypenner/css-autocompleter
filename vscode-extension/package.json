{
  "name": "css-to-go",
  "displayName": "css-to-go",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-to-go.addCssToAutocomplete",
        "title": "Add CSS file to Autocomplete"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "css-to-go.addCssToAutocomplete",
          "when": "resourceExtname == .css",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "List of CSS files to provide class autocompletion for",
      "properties": {
        "css-to-go.filesList": {
          "type": "array",
          "scope": "machine-overridable",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "These CSS files will have their classes made available for autocompletion."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "echo 'Be sure to build the NAPI portion before iterating on the extension' && tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "fmt": "prettier --write . --ignore-path .gitignore",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run compile",
    "package": "echo 'TODO: package using vsce'"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "esbuild": "^0.17.18"
  }
}
